{
  "name": "vsc-gradle",
  "displayName": "VSC Gradle",
  "description": "Gradle integration for vscode",
  "version": "1.0.2",
  "publisher": "contrapt",
  "license": "Apache 2.0",
  "engines": {
    "vscode": "^1.42.0"
  },
  "icon": "resources/gradle.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/msimmons/vsc-gradle"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:build.gradle",
    "workspaceContains:build.gradle.kts"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {},
    "commands": [
      {
        "title": "Gradle: Refresh",
        "command": "gradle.refresh"
      },
      {
        "title": "Gradle: Run Task",
        "command": "gradle.run-task"
      }
    ],
    "menus": {},
    "configuration": {
      "title": "Gradle Configuration",
      "properties": {
        "vsc-gradle.autorefresh": {
          "type": "boolean",
          "description": "Whether gradle project autorefrshes when files matching 'refreshGlob' pattern change",
          "default": true
        },
        "vsc-gradle.refreshGlob": {
          "type": "string",
          "description": "File watcher glob for autorefreshing the gradle project, relative to workspace root",
          "default": "**/*.{gradle,gradle.kts,properties}"
        }
      }
    },
    "problemMatchers": [
      {
        "label": "gradle",
        "owner": "vsc-gradle",
        "name": "gradle-error",
        "source": "gradle",
        "fileLocation": "absolute",
        "severity": "error",
        "pattern": {
          "regexp": "^e:\\s+(.*):\\s+\\((\\d+),\\s+(\\d+)\\):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      {
        "label": "gradle",
        "owner": "vsc-gradle",
        "name": "gradle-warn",
        "source": "gradle",
        "fileLocation": "absolute",
        "severity": "warning",
        "pattern": {
          "regexp": "^w:\\s+(.*):\\s+\\((\\d+),\\s+(\\d+)\\):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile; ./gradlew build deploy",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.10.59",
    "@types/vscode": "^1.42.0",
    "mocha": "^3.5.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "node-uuid": "^1.4.8"
  },
  "extensionDependencies": [
    "contrapt.jvmcode"
  ]
}
